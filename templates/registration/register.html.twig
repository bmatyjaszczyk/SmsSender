{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h3>Register</h3>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {label: 'Email', 'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.plainPassword, {label: 'Password', 'attr': {'class': 'form-control'}}) }}

        <div class="form-group">
            <label for="agree-terms">Agree terms </label>
            {{ form_widget(registrationForm.agreeTerms, { 'attr': {'id': 'agree-terms'} }) }}
        </div>

    <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
